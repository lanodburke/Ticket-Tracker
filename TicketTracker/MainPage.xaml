    <ScrollViewer VerticalScrollBarVisibility="Auto" VerticalScrollMode="Auto" HorizontalScrollBarVisibility="Disabled" HorizontalScrollMode="Disabled">
    <Grid Background="LightGray">
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
        <StackPanel Grid.Row="0" Grid.Column="0" Padding="15">
                <ComboBox x:Name="CountriesCombo" Header="Select Country Code" Height="60" Width="auto"
                      ItemsSource="{x:Bind Countries}">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Tapped="CountryBox_Tapped" x:Name="CountryBox" Tag="{Binding Item1}" Text="{Binding Item2}"/>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
            </StackPanel>
            <StackPanel Grid.Row="0" Grid.Column="1" Padding="15">
                <ComboBox x:Name="ClassificationsCombo" Header="Select Event Type" Height="60" Width="auto"
                      ItemsSource="{x:Bind Classifications}">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Tapped="ClassificationBox_Tapped" x:Name="ClassifcationBox" Text="{Binding}"/>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
            </StackPanel>

            <GridView ItemsSource="{x:Bind Events}"
              IsTapEnabled="True"
              IsItemClickEnabled="True"
              ItemClick="Goto_Event_Details_Page"
              Grid.Row="1" Grid.ColumnSpan="2">
                <GridView.ItemTemplate>
                    <DataTemplate x:Name="EventDataTemplate" x:DataType="local:Event">
                        <Grid Height="180" Width="320" AutomationProperties.Name="{x:Bind name}">
                            <Image Source="{x:Bind image}" Stretch="UniformToFill"/>
                            <StackPanel Orientation="Vertical" Height="60" VerticalAlignment="Bottom" Opacity="0.80" Background="Azure" Padding="12">
                                <TextBlock TextWrapping="WrapWholeWords"  Text="{x:Bind name}"/>
                                <TextBlock TextWrapping="WrapWholeWords" Text="{x:Bind venueName}" Style="{ThemeResource CaptionTextBlockStyle}" Foreground="{ThemeResource SystemControlPageTextBaseMediumBrush}"/>
                            </StackPanel>
                        </Grid>
                    </DataTemplate>
                </GridView.ItemTemplate>
                <GridView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <ItemsWrapGrid MaximumRowsOrColumns="4" Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </GridView.ItemsPanel>
            </GridView>
        </Grid>
    </ScrollViewer>

